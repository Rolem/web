<div class="container">
  <div class="row">
    <div class="span12 text-center">
      <% flash.each do |key, value| %>
          <% bt = button_tag('x', type: 'button', class: 'close', 'data-dismiss' => 'alert') %>
          <%= content_tag(:div, bt + value, class: "alert alert-#{key}") %>
      <% end %>
    </div>
  </div>
</div>

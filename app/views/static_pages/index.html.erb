          </div>

          <div class="item">
            <%=  image_tag 'carousel/3.png', alt: 'item 3' %>

          </div>

          <div class="item  active">
            <%= image_tag 'carousel/rolem_in_sofa_2014.png', alt: 'rolem in sofa 2014' %>
          </div>
           


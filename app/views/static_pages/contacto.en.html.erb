

<div class="container black-bg"style="margin-bottom:50px;">

  <div class="row contacto">
    <div class="span6 offset3">
      <center><h4>¿Tienes dudas?¿Quieres una mejor asesoría?</h4>
        <h4>Contactanos!</h4></center>
      <br><br>
      <div class="formulario-usuario ">
        <%= form_tag submit_contact_path, method: :post, class: 'formulario-general' do %>
            <div class="control-group">
              <%= text_field_tag :full_name, nil, placeholder: t('misc.form.full name.one', count: 1), required: true %>
              <%= email_field_tag :email, nil, placeholder: t('misc.form.email.one', count: 1), required: true %>
              <%= text_area_tag :message, nil, placeholder: t('misc.form.message.one', count: 1), rows: 5 ,required: true %>
            </div>
            <div class="control-group text-center">
              <%= submit_tag t('misc.form.send.one', count: 1), class: 'btn btn-warning' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>